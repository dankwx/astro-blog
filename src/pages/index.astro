<style>
.teaser{
  padding-top: 2.6em;
  font-size: 1.4em;
}
h1{
  font-size: 4.4em;
  padding-top:0.4em;
}
.description{
  font-size: 2.4em;
}
.descriptionSpam{
  font-style: italic;
  /* https://coolors.co/palette/ffa69e-faf3dd-b8f2e6-aed9e0-5e6472 */
  color: #ffa69e;
}
.descriptionSpam:last-child{
  color: #e9c46a;
}
.hrWrapper{
  width: 100%;
  height: 0.2vh;
  background-color:black;
}
.postSectionTitle{
  margin-bottom:1em;
}
.postsWrapper{
  margin:auto;
  max-width: 90ch;
}
.cardsWrapper{
  box-sizing: border-box;
}
a{
  width: 100%;
  height: auto;
  border: solid 2px;
  margin-bottom: 1rem;
  display: block;
  box-sizing: border-box;
  padding: 2em 0;
}
article{
  width:100%;
  height: 100%;
  display:flex;
  justify-content: space-between;
  align-items:center;
  padding: 0 2em;
}
.postName{
  display: flex;
  flex-direction: column;
  background-color:yellow;
  justify-content: center;
  height: 100%;
  gap: 1em
}
h3{
  margin:0;
  font-size: 2em;
}
.postDate{
  background-color:brown;
  height: 100%;
  display: flex;
  align-items: center;
}span{
  font-size:1.4em;
}
</style>
