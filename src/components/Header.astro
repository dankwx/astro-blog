.overlay {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: white;
  transition: transform 0.3s ease-in-out;
  transform: translateX(100%);
  background-color: #faf9f9;
  display:flex;
  justify-content:center;
  padding:1em;
}

.overlay.active {
  transform: translateX(0);
}
.overlay-content{
  width: 80%;
  height: 100%;
  display:flex;
  flex-direction: row;
}
.overlay-content .leftSection{
  display: flex;
  width:60%;
  flex-direction: column;
  padding-top:2em;
  padding-left: 1em;
}
.overlay-content .leftSection a{
  font-family: "Poppins", sans-serif;
  font-size: 2em;
  margin-bottom: 1em;
}
.overlay-content .rightSection{
  width: 40%;
  padding-top: 2em;
  display:flex;
  justify-content: center;
}
</style>
