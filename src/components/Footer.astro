<style>
  .footer {
    background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
    border-top: 1px solid #e2e8f0;
    margin-top: auto;
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 3rem 2rem 1.5rem;
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 2rem;
  }

  .footer-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-brand {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .brand-name {
    font-size: 1.5rem;
    font-weight: 700;
    color: #0f172a;
  }

  .footer-tagline {
    color: #64748b;
    font-size: 0.925rem;
    line-height: 1.5;
  }

  .footer-location {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: #64748b;
    font-size: 0.875rem;
  }

  .footer-links {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .link-group h4 {
    font-size: 0.875rem;
    font-weight: 600;
    color: #0f172a;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .footer-nav a {
    color: #64748b;
    text-decoration: none;
    font-size: 0.925rem;
    transition: color 0.3s ease;
  }

  .footer-nav a:hover {
    color: #2563eb;
  }

  .social-links {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .social-links a {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #64748b;
    text-decoration: none;
    font-size: 0.925rem;
    transition: all 0.3s ease;
    padding: 0.5rem 0;
  }

  .social-links a:hover {
    color: #2563eb;
    transform: translateX(4px);
  }

  .portfolio-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .footer-bottom {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-top: 2rem;
    border-top: 1px solid #e2e8f0;
    gap: 1rem;
  }

  .copyright p {
    color: #64748b;
    font-size: 0.875rem;
    margin: 0;
  }

  .tech-stack {
    color: #94a3b8;
    font-size: 0.75rem;
    font-weight: 500;
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .footer-container {
      padding: 2rem 1rem 1rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-links {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      align-items: flex-start;
      gap: 0.75rem;
    }

    .social-links {
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1rem;
    }

    .social-links a {
      padding: 0.25rem 0;
    }

    .social-links a:hover {
      transform: translateY(-2px);
    }
  }

  @media (max-width: 480px) {
    .footer-container {
      padding: 1.5rem 1rem 1rem;
    }

    .footer-content {
      gap: 1.5rem;
    }

    .social-links {
      flex-direction: column;
      gap: 0.5rem;
    }

    .social-links a:hover {
      transform: translateX(4px);
    }
  }
</style>
