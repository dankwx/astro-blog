<style>
  .teaser {
    padding-top: 2.6em;
    font-size: 1.4em;
  }
  .name {
    font-size: 4.4em;
    font-weight: bold;
    padding-top: 0.4em;
    font-family: "Aleo", serif;
    text-shadow:
      7.25px 0.25px 0 #ffd6ba,
      0.5px 0.5px 0 #ffd6ba,
      0.75px 0.75px 0 #ffd6ba,
      1px 1px 0 #ffd6ba,
      1.25px 1.25px 0 #ffd6ba,
      1.5px 1.5px 0 #ffd6ba,
      1.75px 1.75px 0 #ffd6ba,
      2px 2px 0 #ffd6ba,
      2.25px 2.25px 0 #ffd6ba,
      2.5px 2.5px 0 #ffd6ba,
      2.75px 2.75px 0 #ffd6ba,
      3px 3px 0 #ffd6ba,
      3.25px 3.25px 0 #ffd6ba,
      3.5px 3.5px 0 #ffd6ba,
      3.75px 3.75px 0 #ffd6ba,
      4px 4px 0 #ffd6ba,
      5.25px 5.25px 0 #ffd6ba,
      5.5px 5.5px 0 #ffd6ba,
      5.75px 5.75px 0 #ffd6ba,
      6px 6px 0 #ffd6ba;
  }
  .description {
    font-size: 2.4em;
  }
  .descriptionSpam {
    font-style: italic;
    /* https://coolors.co/palette/ffa69e-faf3dd-b8f2e6-aed9e0-5e6472 */
    color: #ffa69e;
  }
  .descriptionSpam:last-child {
    color: #e9c46a;
  }
  .hrWrapper {
    width: 100%;
    height: 0.2vh;
    background-color: black;
  }
  .postSectionTitle {
    font-size: 3.4em;
    margin-top: 1em;
    margin-bottom: 1em;
  }
  .postsWrapper {
    margin: auto;
    max-width: 90ch;
    margin-bottom: 14rem;
  }
  .cardsWrapper {
    box-sizing: border-box;
  }
  a {
    width: 100%;
    height: auto;
    border: solid 2px;
    margin-bottom: 1rem;
    display: block;
    box-sizing: border-box;
    padding: 2em 0;
    cursor: pointer;
    box-shadow:
      1px 1px 0 0 #ffd6ba,
      2px 2px 0 0 #ffd6ba,
      3px 3px 0 0 #ffd6ba,
      4px 4px 0 0 #ffd6ba,
      5px 5px 0 0 #ffd6ba,
      6px 6px 0 0 #ffd6ba;

    transition: box-shadow 0.3s ease;
  }
  a:hover {
    box-shadow: none;
  }
  article {
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 2em;
  }
  .postName {
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 100%;
    gap: 1em;
  }
  h3 {
    margin: 0;
    font-size: 2em;
  }
  .postDate {
    height: 100%;
    display: flex;
    align-items: center;
  }
  span {
    font-size: 1.4em;
  }
  .personalSection {
    max-width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    background-color: #bee3db;
    padding: 4em 0;
  }
  .content {
    width: 70%;
    display: flex;
    flex-direction: column;
    align-items: center;
  }
  .content h2 {
    font-family: "Aleo", sans-serif;

    font-size: 3.3em;
  }

  .content p {
    font: inherit;
    font-size: 1.6em;
    font-family: "Poppins", sans-serif;
  }
</style>
