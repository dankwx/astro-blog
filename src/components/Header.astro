  @media (max-width: 768px) {
    .headerWrapper{
     
    }
    .leftContainer, .rightContainer{
      display: none;
    }
  .mobileContainer{
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .mobileTitle{
    display:flex;
    align-items: center;
