    }

    .hero-stats {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .skills-grid {
      grid-template-columns: 1fr;
    }

    .focus-areas {
      grid-template-columns: 1fr;
    }

    .timeline {
      padding-left: 1.5rem;
    }

    .timeline-dot {
      left: -1.5rem;
    }
  }

  @media (max-width: 480px) {
